<%- model_class = Introduction.new.class -%>
<div class="page-header">
  <h1><%#=t '.title', :default => model_class.model_name.human.pluralize 
  %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>    
      <th><%#= model_class.human_attribute_name(:title) 
      %></th>
      <th><%#= model_class.human_attribute_name(:content) 
      %></th>
      <th><%#=t '.actions', :default => t("helpers.actions") 
      %></th>
    </tr>
  </thead>
  <tbody>
    <% @introductions.each do |introduction| %>
      <tr>
        
        <td>
        	<%#= introduction.title 
        	%>
        </td>
        <td><%= introduction.content.html_safe %></td>
        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_introduction_path(introduction), :class => 'btn btn-mini' %>
          <% link_to t('.destroy', :default => t("helpers.links.destroy")),
                      introduction_path(introduction),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

