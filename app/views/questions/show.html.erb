<%- model_class = @question.class -%>
<div class="page-header">
  <h1>Questão</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Título:</strong></dt>
  <dd><%= @question.title %></dd>
  <dt><strong>Enunciado:</strong></dt>
  <dd><%= @question.content %></dd>
  <dt><strong>Resposta correta:</strong></dt>
  <dd><%= @question.correct_answer %></dd>
  <dt><strong>exercise_id:</strong></dt>
  <dd><%= @question.exercise_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              questions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_question_path(@question), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              question_path(@question),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
