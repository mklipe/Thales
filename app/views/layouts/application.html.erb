<!DOCTYPE html>
<html>
<head>
  <title>Thales</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
    
  <%= csrf_meta_tags %>
  <script type="text/javascript"
	    src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=AM_HTMLorMML-full">
  </script>
  <script type="text/x-mathjax-config">
	//<![CDATA[
	    MathJax.Hub.Config({
	      asciimath2jax: {
		delimiters: [['`','`'], ['$','$']]
	      }
	    });
	 //]]>
  </script>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
      	<span class="icon-bar"></span>
      	<span class="icon-bar"></span>
      	<span class="icon-bar"></span>
      </a>	
      	<a class="brand" href="#">Thales</a>
      	<div class="nav-collapse">
      		<ul class='nav pull-right'>
      			      			
      			<li class="dropdown">
    				<a class="dropdown-toggle" data-toggle="dropdown" href="#">
        				Introdução
        				<b class="caret"></b>
      				</a>
    			</li>
      			
      			<li class="dropdown">
    				<a class="dropdown-toggle"
       					data-toggle="dropdown"
       					href="#">
        				Exercícios
        				<b class="caret"></b>
      				</a>
  				</li>
      			
      			<li><%= link_to "Feedback" %></li>
      			<li><%= link_to "Ajuda"%></li>
      			
      			<% if user_signed_in? %>
					<li><%= link_to current_user.email %></li>
					<li><%= link_to "Sair", destroy_user_session_path, :method => :delete %></li>
				<% else %>
			 		<li><%= link_to "Registrar", new_user_registration_path  %> </li> 
			 		<li><%= link_to "Entrar", new_user_session_path%></li>
				<% end %>
							
				
		  </ul>
        </div>
      </div>
    </div>
  </div>	
	
	<div class="container" id="container">
		<div class="row">
			
			<div class="span12">
			  <%= yield %>
			</div>
		</div>
	</div>
</body>
</html>
