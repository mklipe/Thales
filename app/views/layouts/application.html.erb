<!DOCTYPE html>
<html>
<head>
  <title>Thales</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
    
  <%= csrf_meta_tags %>
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      
      	<a class="brand" href="#">Thales</a>
      	<div class="nav-collapse">
      		
  
      		<ul class='nav pull-right'>
      			<li><%= link_to "Introdução" %></li>
      			<li><%= link_to "Exercícios"%></li>      			
      			<li><%= link_to "Feedback" %></li>
      			<li><%= link_to "Ajuda"%></li>  			
				
      			<% if user_signed_in? %>
      			<li class="divider-vertical"></li>
      			
      			<li class="dropdown">
            		<a href="#" class="dropdown-toggle" data-toggle="dropdown">
            			<%= current_user.email %>
            			<b class="caret"></b>
            		</a>
              		<ul class="dropdown-menu"> 
			 			<li><%= link_to "Sair", destroy_user_session_path, :method => :delete %></li>
                	</ul>
      			</li>
					
					
				<% else %>
				
				<li class="dropdown">
            	<a href="#" class="dropdown-toggle" data-toggle="dropdown">Acessar
            		<b class="caret"></b>
            	</a>
              	<ul class="dropdown-menu">
               		<li><%= link_to "Registrar-se", new_user_registration_path  %> </li> 
			 		<li><%= link_to "Entrar", new_user_session_path%></li>
                	
              	</ul>
            </li>
				
			 		
				<% end %>
			</ul>
        </div>
      </div>
    </div>
  </div>	
	
	</div>
	<div class="container-fluid" id="container">
		<div class="row-fluid nomargin">
			
			<div class="span12">
			  <%= yield %>
			</div>
		</div>
	</div>
<script type="text/javascript"
	    src="http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=AM_HTMLorMML-full">
  </script>
  <script type="text/x-mathjax-config">
	//<![CDATA[
	    MathJax.Hub.Config({
	      asciimath2jax: {
		delimiters: [['`','`'], ['$','$']]
	      }
	    });
	 //]]>
  </script>	
</body>
</html>
