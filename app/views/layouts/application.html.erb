<!DOCTYPE html>
<html>
<head>
  <title>Thales</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div id = "container">
		<div id = "user_nav">
			<% if user_signed_in? %>
				Logado como <%= current_user.email %>. Não é você?
				<%= link_to "Sair", destroy_user_session_path, :method => :delete %>
			<% else %>
			 	<%= link_to "Registrar", new_user_registration_path  %> ou <%= link_to "Entrar", new_user_session_path%>
			<% end %>
		</div>
		
		<% flash.each do |name, msg| %>
			<% content_tag :div, msg, :id => "flash_#{name}"%>	
		<% end%>
		
		<% #if show_title? %>
			<h1><%= yield(:title) %></h1>
		<% #end %>
	
		<%= yield %>

	</div>
</body>
</html>
